# Node Environment (development, production, test)
NODE_ENV=development

# Server Configuration
PORT=3000

# Winston Logger Level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# MongoDB Connection URI
MONGO_URI=mongodb://localhost:27017/express-starter-db

# Authentication
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_TOKEN_SECRET=your_super_secret_access_token
JWT_REFRESH_TOKEN_SECRET=your_super_secret_refresh_token
JWT_ACCESS_TIME=15m
JWT_REFRESH_TIME=7d
JWT_AUDIENCE=yourapp_audience
JWT_ISSUER=yourapp_issuer

# Redis Configuration
# Used for storing refresh tokens and other caching purposes.
REDIS_URL=redis://127.0.0.1:6379
