# 1. Check for secrets with gitleaks
echo "ğŸ” Checking for secrets using GitLeaks..."

if ! command -v gitleaks >/dev/null 2>&1; then
  echo "âš ï¸ GitLeaks is not installed. Skipping secret scan."
  echo "ğŸ‘‰ Install it from https://github.com/gitleaks/gitleaks"
else
  gitleaks git --staged --no-banner --redact --verbose
fi

# 2. Run linter/formatter
echo "ğŸ§¹ Running Biome formatting check..."
npx @biomejs/biome check --no-errors-on-unmatched --files-ignore-unknown=true
